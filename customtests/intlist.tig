/* 自我递归类型定义; 记录; while, for循环 */
let
    type intlist = {val: int, next: intlist}
    var ans := 0
    function sum(il: intlist): int = 
    (    
        while iltmp do
        (
            ans := ans + il.val;
            il := il.next
        );
        ans
    )

    var il: intlist := intlist {val= 0, next= nil }
    var tmp := il
in 
    for i := 0 to 5 do
    (
        tmp := intlist {val= i, next= nil};
        il.next = tmp
    );
    sum(il)

end
